<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aluno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joserenato.aula4.AlunoActivity">

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSalvarAluno"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="143dp"
        android:onClick="salvar"/>

    <Button
        android:text="Novo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSalvarAluno"
        android:layout_toRightOf="@+id/buttonSalvarAluno"
        android:layout_toEndOf="@+id/buttonSalvarAluno"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/buttonNovoAluno"
        android:onClick="novo"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Idprofessor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNomeAluno"
        android:hint="Nome"
        android:layout_below="@+id/Idprofessor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextCguAluno"
        android:hint="CGU"
        android:layout_below="@+id/editTextNomeAluno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextMatriculaAluno"
        android:hint="Matricula"
        android:layout_below="@+id/editTextCguAluno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Listar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonNovoAluno"
        android:layout_toRightOf="@+id/editTextMatriculaAluno"
        android:layout_toEndOf="@+id/editTextMatriculaAluno"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/ExibirAluno"
        android:onClick="listar"/>

    <Button
        android:text="Excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonNovoAluno"
        android:layout_toLeftOf="@+id/buttonNovoAluno"
        android:layout_toStartOf="@+id/buttonNovoAluno"
        android:layout_marginTop="20dp"
        android:id="@+id/excluirAluno"
        android:onClick="excluir"
        />
</RelativeLayout>
