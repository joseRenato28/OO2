<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_movies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joserenato.trabalhog1.ListMovies"
    android:background="@android:color/holo_blue_dark">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:layout_below="@+id/edit_movie"
        android:id="@+id/title_text"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_title_list"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota"
        android:layout_below="@+id/movie_title_list"
        android:id="@+id/rate_text"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/movie_rate_list"
        android:textSize="24sp"
        android:layout_below="@+id/rate_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_movie"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="new_movie_activity"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/background_light" />

</RelativeLayout>
